<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Tebbet.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Tebbet.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo.ico"
        Title="Tebbet">

	<Window.Background>
		<ImageBrush Source="/Assets/mainbackground.png" />
	</Window.Background>

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<StackPanel>
		<Grid Background="#374F3E"  Margin="0"
      ColumnDefinitions="150, auto, *"
      RowDefinitions="Auto">
			<Grid>
				<Image Source="/Assets/logo.png" Width="75" HorizontalAlignment="Left" Margin="10 9 0 7"/>
			</Grid>
			<Grid ColumnDefinitions="auto, auto, auto, auto" RowDefinitions="auto" Grid.Column="1">
				<Button FontSize="16" FontFamily="{StaticResource LakkiReddy}" Padding="6 6 6 0" Margin="0 4 0 0" Background="Transparent" Foreground="White" Content="Accueil" />
				<Button FontSize="16" FontFamily="{StaticResource LakkiReddy}" Padding="6 6 6 0" Margin="0 4 0 0" HorizontalAlignment="Center" Grid.Column="1" Background="Transparent" Foreground="White" Content="Courses" />
				<Button FontSize="16" FontFamily="{StaticResource LakkiReddy}" Padding="6 6 6 0" Margin="0 4 0 0" HorizontalAlignment="Center" Grid.Column="2" Background="Transparent" Foreground="White" Content="Classement" />
				<Button FontSize="16" FontFamily="{StaticResource LakkiReddy}" Padding="6 6 6 0" Margin="0 4 0 0" HorizontalAlignment="Center" Grid.Column="3" Background="Transparent" Foreground="White" Content="Fidélité" />
			</Grid>
			<Grid HorizontalAlignment="Right" ColumnDefinitions="auto, auto" RowDefinitions="auto" Grid.Column="2">
				<Button FontSize="16" FontFamily="{StaticResource LakkiReddy}" Padding="6 6 6 0" Margin="0 4 0 0" Grid.Column="0" Background="Transparent" Foreground="White" Content="Connexion" />
				<Button FontSize="16" CornerRadius="20" FontFamily="{StaticResource LakkiReddy}" Padding="12 6 12 0" Margin="10 4 15 0" Grid.Column="1" Background="#5F8C50" Foreground="White" Content="Inscription" />
			</Grid>
		</Grid>
	</StackPanel>
</Window>
